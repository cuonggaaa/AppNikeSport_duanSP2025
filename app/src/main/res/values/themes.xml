<resources xmlns:tools="http://schemas.android.com/tools">
    <!-- Base application theme. -->
    <style name="Base.Theme.BaseAndroidKotlin" parent="Theme.Material3.DayNight.NoActionBar">
        <!-- Customize your light theme here. -->
        <!-- <item name="colorPrimary">@color/my_light_primary</item> -->
    </style>

    <style name="Theme.BaseAndroidKotlin" parent="Base.Theme.BaseAndroidKotlin" />

    <style name="StyleBottomNavigationViewInactive">
        <item name="android:fontFamily">@font/montserrat_light</item>
        <item name="android:color">#AEAEAE</item>
        <item name="android:textSize">11sp</item>
    </style>
    <style name="StyleBottomNavigationViewActive">
        <item name="android:fontFamily">@font/montserrat_medium</item>
        <item name="android:color">@color/white</item>
        <item name="android:textSize">11sp</item>
    </style>

    <style name="CustomTextInputLayout" parent="Widget.MaterialComponents.TextInputLayout.OutlinedBox">
        <item name="boxBackgroundColor">@color/white</item>
        <item name="boxStrokeColor">@color/primary</item>
        <item name="hintTextColor">@color/primary</item>
        <item name="android:textColor">@color/primary</item>
        <item name="boxCornerRadiusTopEnd">@dimen/margin_10</item>
        <item name="boxCornerRadiusBottomEnd">@dimen/margin_10</item>
        <item name="boxCornerRadiusBottomStart">@dimen/margin_10</item>
        <item name="boxCornerRadiusTopStart">@dimen/margin_10</item>
    </style>

    <style name="spinnerItemStyle" parent="android:Widget.TextView.SpinnerItem">
    </style>

    <style name="spinnerDropDownItemStyle" parent="android:TextAppearance.Widget.TextView.SpinnerItem">
    </style>
</resources>